{
  "manifest_version": 3,
  "name": "我的掘金",
  "version": "1.0.0",
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "action": {
    "default_title": "进入我的掘金"
  },
  "content_scripts": [
    {
      "matches": [
        "https://juejin.cn/**"
      ],
      "all_frames": true,
      "js": [
        "src/content-scripts/home/index.ts"
      ]
    },
    {
      "matches": [
        "https://juejin.cn/user/*"
      ],
      "js": [
        "src/content-scripts/user/index.ts"
      ]
    }
  ],
  "permissions": [
    "unlimitedStorage",
    "storage"
  ],
  "host_permissions": [
    "https://*.juejin.cn/*"
  ]
}